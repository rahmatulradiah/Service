<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        app:srcCompat="@mipmap/radiah" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView5"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:text="Rahmatul Radiah"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Universitas Teknologi Yogyakarta"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_facebook"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_below="@id/textView4"
        android:layout_weight="1"
        android:text="Facebook" />

    <Button
        android:id="@+id/btn_instagram"
        android:layout_width="198dp"
        android:layout_height="43dp"
        android:layout_below="@id/textView4"
        android:layout_alignLeft="@id/btn_facebook"
        android:layout_alignRight="@id/btn_facebook"
        android:layout_marginLeft="213dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="-211dp"
        android:layout_weight="1"
        android:text="Instagram" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="412dp"
        android:layout_height="33dp"
        android:layout_below="@id/btn_instagram"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="MP3 Player"
        android:textColor="#3F51B5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="107dp"
        android:layout_height="47dp"
        android:layout_below="@id/textView7"
        android:text="PLAY" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_below="@id/textView7"
        android:layout_alignLeft="@id/btn_play"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="0dp"
        android:text="PAUSE" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_below="@id/textView7"
        android:layout_alignLeft="@id/btn_pause"
        android:layout_marginLeft="149dp"
        android:text="STOP" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@id/btn_play"
        android:layout_marginTop="44dp" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView"
        android:text="mainkan" />

    <Button
        android:id="@+id/button_pause"
        android:layout_width="96dp"
        android:layout_height="43dp"
        android:layout_below="@id/videoView"
        android:layout_alignLeft="@id/button_play"
        android:layout_alignRight="@id/button_play"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="-138dp"
        android:text="berhenti" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView"
        android:layout_alignRight="@id/button_pause"
        android:layout_marginLeft="149dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="-150dp"
        android:text="matikan" />

</RelativeLayout>